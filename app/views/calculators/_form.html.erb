<%= form_tag :calculator, remote: true do %>
  <div class="form-group row">
    <%= label_tag :start_location, 'From', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :start_location, '', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= label_tag :end_location, 'To', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :end_location, '', class: 'form-control' %>
    </div>
  </div>
  <div>
    <%= submit_tag 'Calculate', class: 'btn btn-primary float-right' %>
  </div>
<% end %>