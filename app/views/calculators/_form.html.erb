<%= form_tag :calculator do %>
  <div class="form-group row">
    <%= label_tag :start_location, 'From', class: 'col-sm-2 form-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :start_location, '', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= label_tag :to_location, 'To', class: 'col-sm-2 form-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :to_location, '', class: 'form-control' %>
    </div>
  </div>
  <div>
    <%= submit_tag %>
  </div>
<% end %>